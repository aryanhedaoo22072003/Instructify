       "target": "ES2020",               
      "module": "NodeNext",             
      "moduleResolution": "NodeNext",   
      "esModuleInterop": true,         
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
  